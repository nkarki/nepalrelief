<div class="col-md-4 col-md-offset-4">
  <div class="widget top-margin">
    <div class="login-header">
      <%= image_tag("Logo.png", class: "menu_icon") %><span>- Reset Password</span>
    </div>
    <div class="widget-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <%= f.hidden_field :reset_password_token %>

        <div class="input-group">
          <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
          <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "New Password", :class => "form-control" %>
        </div>

        <div class="input-group">
          <span class="input-group-addon"><span class="glyphicon glyphicon-repeat progasket"></span></span>
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Retype-new password", :class => "form-control" %>
        </div>

        <div class="input-group">
          <%= f.submit "Change my password", :class => 'btn btn-primary progasket' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>